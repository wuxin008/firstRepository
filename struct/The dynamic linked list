#include<stdio.h>
#include<stdlib.h>

struct Student
{
	char name[20];
	int age;
	struct Student* next;
};

int main()
{
	//函数声明
	void getINfor(struct Student* std);
	void putINfor(struct Student* p);
	struct Student* createLinkedList();

	struct Student* p1;
	p1 = createLinkedList();
	putINfor(p1);
	return 0;
}

//输出信息
void putINfor(struct Student* p)
{
	while (p != NULL)
	{
		printf("%s的年龄为%d\n", p->name, p->age);
		p = p->next;
	}
}
//创建节点
struct Student* createNode()
{
	struct Student* stu_p;
	stu_p = (struct Student*)malloc(28);
	if (stu_p == NULL)
	{
		printf("内存分配失败\n");
		return NULL;
	}
	printf("请输入学生姓名  年龄\n");
	scanf("%s  %d", stu_p->name, &stu_p->age);
	if (stu_p->age == 0)
		return NULL;
	stu_p->next = NULL;
	return stu_p;
}
//创建链表
struct Student* createLinkedList()
{
	struct Student* createNode();

	struct Student* header = NULL, * p1 = NULL, * p2 = NULL;
	p1 = header = createNode();
	while (p1 != NULL)
	{
		p1 = p1->next = createNode();
	}
	return header;
}
